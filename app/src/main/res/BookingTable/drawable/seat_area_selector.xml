<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true"

        style="style_text_seat_area_checked"
        >

        <shape    android:shape="rectangle">
            <size android:width="40dp" android:height="20dp"/>
            <corners android:radius="40dp" />
            <solid  android:color="@color/Booking_seat_area_on" />
            <stroke  android:width="1dp"
                android:color="@color/Booking_seat_area_corner_on" />

        </shape>


    </item>

    <item  android:state_checked="false"
        style="style_text_seat_area_unchecked"
        >

        <shape android:shape="rectangle">
            <size android:width="40dp" android:height="20dp"/>

            <solid  android:color="@color/Booking_seat_area_off" />
            <corners android:radius="40dp"
                android:color="@color/Booking_seat_area_corner_off" />
        </shape>

    </item>

</selector>